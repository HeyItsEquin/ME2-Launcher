<UserControl x:Class="ME2Launcher.Views.Controls.MainContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ME2Launcher.Views.Controls"
		     xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:pages="clr-namespace:ME2Launcher.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ui:NavigationView Name="RootNav" IsBackButtonVisible="Auto" Margin="0,12" Background="{StaticResource SecondaryBackgroundBrush}">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem Content="Home" Icon="{ui:SymbolIcon Symbol=Home24}" Tag="home" TargetPageType="{x:Type pages:HomePage}">
                </ui:NavigationViewItem>
                <ui:NavigationViewItemSeparator />
                <ui:NavigationViewItem Content="Profiles" Icon="{ui:SymbolIcon Symbol=DocumentOnePage24}" Tag="profiles" TargetPageType="{x:Type pages:ProfilesPage}">
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Mods" Icon="{ui:SymbolIcon Symbol=Folder24}" Tag="mods" TargetPageType="{x:Type pages:ModsPage}">
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="DLL Mods" Icon="{ui:SymbolIcon Symbol=Document24}" Tag="dllmods" TargetPageType="{x:Type pages:DllsPage}">
                </ui:NavigationViewItem>
                <ui:NavigationViewItemSeparator />
                <ui:NavigationViewItem Content="New Profile" Icon="{ui:SymbolIcon Symbol=Add24}" Tag="newprofile" TargetPageType="{x:Type pages:NewProfilePage}">
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Add Mod Directory" Icon="{ui:SymbolIcon Symbol=FolderAdd24}" Tag="addmod" TargetPageType="{x:Type pages:AddModDirectoryPage}">
                </ui:NavigationViewItem>
                <ui:NavigationViewItem Content="Add DLL Mod" Icon="{ui:SymbolIcon Symbol=DocumentAdd24}" Tag="addmoddll" TargetPageType="{x:Type pages:AddDllModPage}">
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem Content="Settings" Icon="{ui:SymbolIcon Symbol=Settings24}" Tag="settings" TargetPageType="{x:Type pages:SettingsPage}">
                </ui:NavigationViewItem>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
    </Grid>
</UserControl>
